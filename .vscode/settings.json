{
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        },
    },
    "mypy-type-checker.args": [
        "--check-untyped-defs",
    ],
    "isort.args": [
        "--profile",
        "black",
    ],
}